# ====================================================
# Observer (ConsoleShare) — Environment Variables
# ====================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#
# IMPORTANT: Never commit your .env file to git!
# ====================================================

# --------------------------------------------------
# Django Core
# --------------------------------------------------

# Generate a strong secret key for production:
#   python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your-secret-key-here

# Set to False for production (CRITICAL)
DEBUG=False

# Comma-separated list of allowed hostnames
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# Frontend URL (used for OAuth redirects)
FRONTEND_URL=http://localhost:5173

# --------------------------------------------------
# Database
# --------------------------------------------------

# PostgreSQL connection string (REQUIRED — app will crash if not set)
# Format: postgresql://user:password@host:port/dbname
DATABASE_URL=postgresql://consoleshare_user:consoleshare_password@localhost:5432/consoleshare

# --------------------------------------------------
# CORS
# --------------------------------------------------

# Comma-separated list of allowed origins for CORS
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,https://your-domain.com

# --------------------------------------------------
# Redis (Required for production WebSocket channel layer)
# --------------------------------------------------

REDIS_URL=redis://localhost:6379

# --------------------------------------------------
# GitHub OAuth (Required for GitHub integration)
# --------------------------------------------------

# Create an OAuth App at: https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URI=http://localhost:8001/api/auth/github/callback/

# --------------------------------------------------
# GitHub Admin (Optional — for automated session archiving)
# --------------------------------------------------

# GitHub username for admin archive repos
GITHUB_ADMIN_USERNAME=
# Personal Access Token with 'repo' scope
# Generate at: https://github.com/settings/tokens
GITHUB_ADMIN_TOKEN=

# --------------------------------------------------
# Frontend (Vite Environment Variables)
# --------------------------------------------------
# These are used at BUILD TIME by the frontend.
# Prefix with VITE_ to make them available in the frontend code.

# Backend API URL (use /api for same-origin, or full URL for cross-origin)
VITE_API_URL=/api

# WebSocket URL (leave empty to auto-detect from window.location)
# For production behind reverse proxy, leave empty or set to wss://your-domain.com
VITE_WS_URL=
